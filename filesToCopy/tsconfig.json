{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": false,
		"baseUrl": "./src",
		"checkJs": true,
		"declaration": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"incremental": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"lib": [
			"DOM",
			"DOM.Iterable",
			"ESNext",
			"ES6",
			"ES2016",
			"ES2017"
		],
		"module": "ESNext",
		"moduleResolution": "Node",
		"noEmit": true,
		"noFallthroughCasesInSwitch": true,
		"resolveJsonModule": true,
		"rootDir": "src",
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"target": "ES5",
	},
	"include": [
		"next-env.d.ts",
		"src/**/*.ts*"
	],
	"exclude": [
		"node_modules",
		"**/*.test.ts*"
	]
}